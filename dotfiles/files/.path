#!/bin/bash

########################
#      Kubernetes
########################
export KUBECONFIG=$HOME/.kube/k3s/config

########################
#      Homebrew
########################
export HOMEBREW_CELLAR=/usr/local/Cellar
export HOMEBREW_CASKROOM=/usr/local/Caskroom

########################
#   Build Automation
########################
export MAVEN_HOME=${HOMEBREW_CELLAR}/maven/3.6.1
export GRADLE_HOME=${HOMEBREW_CELLAR}/gradle/5.6.1

########################
#         Java
########################
#
# All Java versions home folder are being store in:
#   - /Library/Java/JavaVirtualMachines/JDK-VERSION/Contents/Home
#
export JAVA_8_HOME=$(/usr/libexec/java_home -v1.8)
#export JAVA_9_HOME=$(/usr/libexec/java_home -v9)
#export JAVA_10_HOME=$(/usr/libexec/java_home -v10)
export JAVA_11_HOME=$(/usr/libexec/java_home -v11)
#export JAVA_12_HOME=$(/usr/libexec/java_home -v12)
#export JAVA_HOME=${JAVA_8_HOME} # Use Java 1.8 by default
export JAVA_HOME=${JAVA_11_HOME} # Use Java 1.8 by default

########################
#         Go
########################
export GOROOT_1_13=${ENVIRONMENT}/go1.13
export GOROOT_1_14_3=${ENVIRONMENT}/go1.14.3
export GOROOT=${GOROOT_1_14_3} # Use Go 1.14.3 by default
export GOPATH=${HOME}/.go
#export GO111MODULE="on" # on/off/auto

########################
#       Terraform
########################
export TF_LOG=DEBUG

########################
#         Path
########################
export PATH=$HOME/bin:/usr/local/bin:$PATH:${GRADLE_HOME}/bin:${JAVA_HOME}/bin:${MAVEN_HOME}/bin:${GOROOT}/bin:${GOPATH}/bin

unset GOROOT_1_13
unset GOROOT_1_14_3
